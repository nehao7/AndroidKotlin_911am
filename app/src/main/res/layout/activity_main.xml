<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/animation" />

        <EditText
            android:id="@+id/edtInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name" />

        <Button
            android:id="@+id/btnWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RelativeLayout" />

        <Button
            android:id="@+id/btnImplicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Implicit Intent" />

        <Button
            android:id="@+id/btnAlertDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert Dialog" />

        <Button
            android:id="@+id/btnSpinnerActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spinner Activity" />

        <Button
            android:id="@+id/btnListViewActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Activity" />

        <Button
            android:id="@+id/btnBaseAdapterActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Base Adapter Activity" />

        <Button
            android:id="@+id/btnBaseActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Activity" />

        <Button
            android:id="@+id/btnRecyclerActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recycler Activity" />

        <Button
            android:id="@+id/btnNavControllerActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NavController Activity" />

        <Button
            android:id="@+id/btnBottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottom Nav Activity" />

        <Button
            android:id="@+id/btnfirebase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Firebase Registration Activity" />

        <Button
            android:id="@+id/btnWebViewActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WebViewActivity" />

        <Button
            android:id="@+id/btnDrawerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DrawerLayoutActivity" />

        <Button
            android:id="@+id/btnRealTimeDatabase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realtime Database" />

        <Button
            android:id="@+id/btnLocationActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Activity" />

        <Button
            android:id="@+id/btnFirestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Firestore Activity" />
    </LinearLayout>
</ScrollView>